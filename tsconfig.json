{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": [
        "src",
        "src/types/react-jsx.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}